local module            = require("halmd.utility.module")
local sorts             = require("halmd.mdsim.sorts")

-- grab C++ wrappers
local h5 = libhalmd.h5
local po = libhalmd.po
-- grab standard library
local assert = assert
local pairs = pairs

local M = module("halmd.mdsim.sort")

--
-- construct sort module
--
function M.__new(args)
    local sort = args.sort or "hilbert" -- default value
    return sorts[sort]()
end

--
-- assemble module options
--
-- @param desc po.options_description
--
function M.options(desc, globals)

    -- sort module choices with descriptions
    local choices = {
        hilbert         = sorts.hilbert.description()
    }

    globals:add("sort", po.string():choices(choices), "select sort module")
end

--
-- read module parameters from HDF5 group
--
function M.read_parameters(args, group, globals)
    args.sort = globals:read_attribute("sort", h5.string())
end

--
-- write module parameters to HDF5 group
--
-- @param sort module instance
-- @param group HDF5 group
--
function M.write_parameters(sort, group, globals)
    globals:write_attribute("sort", h5.string(), sort.module.namespace)
end

return M
