require("halmd.device")
require("halmd.mdsim.box")
require("halmd.mdsim.core")
require("halmd.mdsim.particle")
require("halmd.modules")

-- grab modules
local device = halmd.device
local mdsim = halmd.mdsim
-- grab C++ wrappers
local hilbert_wrapper = {
    host = {
        [2] = libhalmd.mdsim.host.sorts.hilbert_2_
      , [3] = libhalmd.mdsim.host.sorts.hilbert_3_
    }
}
if libhalmd.mdsim.gpu then
    hilbert_wrapper.gpu = {
        [2] = libhalmd.mdsim.gpu.sorts.hilbert_2_
      , [3] = libhalmd.mdsim.gpu.sorts.hilbert_3_
    }
end
-- grab standard library
local assert = assert

module("halmd.mdsim.sorts.hilbert", halmd.modules.register)

--
-- construct hilbert module
--
function new(args)
    -- dependency injection
    local particle = mdsim.particle() -- singleton
    local dimension = assert(particle.dimension)
    local box = mdsim.box() -- singleton
    local core = mdsim.core()
    local neighbour = assert(core.neighbour)

    if device() then
        local hilbert = assert(hilbert_wrapper.gpu[dimension])
        return hilbert(particle, box)
    else
        local hilbert = assert(hilbert_wrapper.host[dimension])
        return hilbert(particle, box, neighbour)
    end
end

--
-- returns module description
--
function name()
    return "Hilbert space-filling curve"
end
