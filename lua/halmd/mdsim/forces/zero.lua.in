require("halmd.modules")

-- grab environment
local zero_wrapper = {
    host = {
        [2] = halmd_wrapper.mdsim.host.forces.zero_2_
      , [3] = halmd_wrapper.mdsim.host.forces.zero_3_
    }
}
if halmd_wrapper.mdsim.gpu then
    zero_wrapper.gpu = {
        [2] = halmd_wrapper.mdsim.gpu.forces.zero_2_
      , [3] = halmd_wrapper.mdsim.gpu.forces.zero_3_
    }
end

local mdsim = {
    core = require("halmd.mdsim.core")
}
local device = require("halmd.device")
local assert = assert

module("halmd.mdsim.forces.zero", halmd.modules.register)

--
-- construct zero module
--
function new(args)
    local core = mdsim.core()
    local dimension = assert(core.dimension)
    local particle = assert(core.particle)

    local zero
    if not device() then
        zero = assert(zero_wrapper.host[dimension])
    else
        zero = assert(zero_wrapper.gpu[dimension])
    end
    return zero(particle)
end

--
-- returns module description
--
function name()
    return "Zero potential (no interaction)"
end
