local device            = require("halmd.utility.device")
local module            = require("halmd.utility.module")
local mdsim = {
    core                = require("halmd.mdsim.core")
  , particle            = require("halmd.mdsim.particle")
}

-- grab C++ wrappers
local zero_wrapper = {
    host = {
        [2] = libhalmd.mdsim.host.forces.zero_2_
      , [3] = libhalmd.mdsim.host.forces.zero_3_
    }
}
if libhalmd.mdsim.gpu then
    zero_wrapper.gpu = {
        [2] = libhalmd.mdsim.gpu.forces.zero_2_
      , [3] = libhalmd.mdsim.gpu.forces.zero_3_
    }
end
-- grab standard library
local assert = assert

local M = module("halmd.mdsim.forces.zero")

--
-- construct zero module
--
function M.__new(args)
    local particle = mdsim.particle() -- singleton
    local dimension = assert(particle.dimension)

    local zero
    if not device() then
        zero = assert(zero_wrapper.host[dimension])
    else
        zero = assert(zero_wrapper.gpu[dimension])
    end
    local force = zero(particle)

    local core = mdsim.core()
    -- system preparation
    core:on_append_setup{force.compute, tracker = force}

    return force
end

--
-- returns module description
--
function M.description()
    return "Zero potential (no interaction)"
end

return M
