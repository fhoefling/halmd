require("halmd.device")
require("halmd.mdsim.core")
require("halmd.mdsim.particle")
require("halmd.modules")

-- grab modules
local device = halmd.device
local mdsim = halmd.mdsim
-- grab C++ wrappers
local constant_velocity_wrapper = {
    host = {
        [2] = libhalmd.mdsim.host.fields.constant_velocity_2_
      , [3] = libhalmd.mdsim.host.fields.constant_velocity_3_
    }
}
if libhalmd.mdsim.gpu then
    constant_velocity_wrapper.gpu = {
        [2] = libhalmd.mdsim.gpu.fields.constant_velocity_2_
      , [3] = libhalmd.mdsim.gpu.fields.constant_velocity_3_
    }
end
local po = libhalmd.po
local h5 = libhalmd.h5
-- grab standard library
local assert = assert
local error = error
local property = property
local type = type

module("halmd.mdsim.fields.constant_velocity", halmd.modules.register)

--
-- construct constant_velocity module
--
-- @param args.value            value of constant velocity vector
-- @param args.add              if present add velocity field, else call set()
-- @param args.set_flag         opposite of args.add but overrides args.add and is not connected to command line arguments
--
function new(args)
    -- dependency injection
    local particle = mdsim.particle() -- singleton
    local dimension = assert(particle.dimension)
    local logger = assert(args.logger)

    -- value of the external field to set/add
    -- if a scalar is given, construct a vector from it
    local value = args.value or 0 -- default value
    if type(value) == "number" then
        local value_ = {}
        for i = 1,dimension do value_[i] = value end
        value = value_
    elseif type(value) ~= "table" then
        error("To initialize a new constant_velocity, supply a number or an array, but no " .. type(value_))
    end

    -- check wether to add the field (true) or set (false)
    local use_add = not args.set_flag and args.add

    -- construct module
    local constant_velocity
    if device() then
        constant_velocity = assert(constant_velocity_wrapper.gpu[dimension])
    else
        constant_velocity = assert(constant_velocity_wrapper.host[dimension])
    end
    local field = constant_velocity(particle, value, logger)

    -- connect field to core
    local core = mdsim.core()
    if use_add then
        -- Add the velocity field to the computed velocities. (Call after computation of velocities.)
        core:on_append_setup{field.add, tracker = field}
        core:on_append_finalize{field.add, tracker = field}
    else
        -- set velocity field before velocity computation (on_finalize)
        core:on_prepend_setup{field.set, tracker = field}
        core:on_prepend_finalize{field.set, tracker = field}
    end

    field.use_add = property(function(self)
        return not not use_add -- convert to boolean
    end)

    return field
end

--
-- assemble module options
--
-- @param desc po.options_description
--
function options(desc)
    desc:add("value", po.float_array(), "external field vector")
    desc:add("add", po.bool_switch(), "add velocity field (if switch present)")
end

--
-- returns module description
--
function description()
    return "add or set a constant velocity field"
end

--
-- write module parameters to HDF5 group
--
-- @param constant_velocity module instance
-- @param group HDF5 group
--
function write_parameters(constant_velocity, group)
    group:write_attribute("value", h5.float_array(), constant_velocity.value)
    group:write_attribute("add", h5.bool(), constant_velocity.use_add)
end

--
-- read module parameters from HDF5 group
--
function read_parameters(args, group)
    args.value = group:read_attribute("value", h5.float_array())
    args.add = group:read_attribute("add", h5.bool())
end
