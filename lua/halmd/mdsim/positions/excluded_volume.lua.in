require("halmd.mdsim.box")
require("halmd.modules")

-- grab modules
local mdsim = halmd.mdsim
-- grab C++ wrappers
local excluded_volume_wrapper = assert(libhalmd.mdsim.positions.excluded_volume)
-- grab standard library
local assert = assert
local class_info = class_info
local print = print

module("halmd.mdsim.positions.excluded_volume", halmd.modules.register)

function new(args)
    -- parameters
    local samples = assert(args.samples, "missing parameter: samples")
    local diameters = assert(args.diameters, "missing parameter: diameters")
    local cell_length = args.cell_length or 1 -- default value
    -- dependencies
    local box = mdsim.box() -- singleton
    local logger = assert(args.logger)

    local excluded_volume = excluded_volume_wrapper(box, cell_length, logger, samples[1])
    for i = 1, #samples do
        excluded_volume:exclude_spheres(samples[i], diameters[i])
    end
    return excluded_volume
end
