local writers = require("halmd.io.writers")
require("halmd.modules")

-- grab C++ wrappers
local po = libhalmd.po
-- grab standard library
local assert = assert
local pairs = pairs

module("halmd.io.writers.file", halmd.modules.register)

-- file instances by extension
local files = {}

--
-- construct observable writer
--
function new(args)
    local format = args.format or "h5md" -- default value
    local extension = args.extension or "obs" -- default value
    if not files[extension] then
        files[extension] = assert(writers[format]){path = args.output .. "." .. extension}
    end
    return files[extension]
end

namespace = "writer"

--
-- assemble module options
--
-- @param desc po.options_description
--
function options(desc)
    -- writer module choices with descriptions
    local choices = {
        h5md            = writers.h5md.description()
    }

    desc:add("format", po.string():choices(choices), "select output file format")
end
