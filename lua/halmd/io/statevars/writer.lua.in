require("halmd.modules")

require("halmd.io.statevars.writers")

-- grab environment
local writers = halmd.io.statevars.writers
local hooks = require("halmd.hooks")
local assert = assert

module("halmd.io.statevars.writer", halmd.modules.register)

--
-- construct statevars module
--
function new(args)
    local format = args.format or "hdf5" -- default value
    local writer = assert(writers[format])()

    hooks.register_object_hook(function(observable)
        if observable.register_observables then
            observable:register_observables(writer)
        end
    end)

    return writer
end
