-- grab modules
-- grab C++ wrappers
-- grab standard library
local logger_wrapper = halmd_wrapper.io.logger
local setmetatable = setmetatable
local rawset = rawset
local rawget = rawget
local tostring = tostring

module("halmd.log")

setmetatable(_M, {
    --
    -- log message with given severity
    --
    -- @param level Logging severity level
    --
    __index = function(self, level)
        local wrapper = logger_wrapper[level]
        local log
        if wrapper then
            log = function(message)
                wrapper(tostring(message))
            end
        else
            log = function() end
        end
        rawset(self, level, log)
        return log
    end
})
