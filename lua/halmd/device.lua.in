require("halmd.modules")
require("halmd.singleton")

-- grab C++ wrappers
local device_wrapper
if libhalmd.utility.gpu then
    device_wrapper = libhalmd.utility.gpu.device
end
local h5 = libhalmd.h5
local po = libhalmd.po
-- grab standard library
local assert = assert

module("halmd.device", halmd.modules.register, halmd.singleton)

--
-- construct device module
--
function new(args)
    if device_wrapper and not args.disable_gpu then
        local devices = args.devices or {}
        local threads = args.threads or 128 -- default value

        return device_wrapper(devices, threads)
    end
end

-- override default parameter namespace
namespace = "gpu"

--
-- assemble module options
--
-- @param desc po.options_description
--
function options(desc, globals)
    if device_wrapper then
        desc:add("devices", po.int_array(), "CUDA device(s)")
        desc:add("threads", po.uint(), "number of CUDA threads per block")
        globals:add("disable-gpu", po.bool_switch(), "disable GPU acceleration")
    end
end

--
-- read module parameters from HDF5 group
--
function read_parameters(args, group)
    args.threads = group:read_attribute("threads", h5.uint())
end

--
-- write module parameters to HDF5 group
--
-- @param device module instance
-- @param group HDF5 group
--
function write_parameters(device, group, globals)
    group:write_attribute("threads", h5.uint(), device.threads)
end
