--
-- Load HAL’s MD package
--
require("halmd.options")
require("halmd.io.profiling.writer")
require("halmd.io.statevars.writer")
require("halmd.io.trajectory.reader")
require("halmd.io.trajectory.writer")
require("halmd.mdsim.box")
require("halmd.mdsim.core")
require("halmd.mdsim.force")
require("halmd.mdsim.integrator")
require("halmd.mdsim.neighbour")
require("halmd.mdsim.particle")
require("halmd.mdsim.position")
require("halmd.mdsim.sort")
require("halmd.mdsim.velocity")
require("halmd.observables.ssf")
require("halmd.observables.thermodynamics")
require("halmd.sampler")

--
-- Run simulation
--
function run()
    local core = halmd.mdsim.core() -- singleton
    core.particle = halmd.mdsim.particle()
    core.box = halmd.mdsim.box()
    core.integrator = halmd.mdsim.integrator()
    core.force = halmd.mdsim.force()
    core.neighbour = halmd.mdsim.neighbour()
    core.sort = halmd.mdsim.sort()

    local reader = halmd.io.trajectory.reader()
    core.position = halmd.mdsim.position{ reader = reader }
    core.velocity = halmd.mdsim.velocity{ reader = reader }

    local sampler = halmd.sampler() -- singleton
    sampler.trajectory_writer = halmd.io.trajectory.writer()
    sampler.observables = {
        halmd.observables.ssf()
      , halmd.observables.thermodynamics()
    }
    sampler.statevars_writer = halmd.io.statevars.writer()

    -- Construct profiling writers.
    --
    -- The profiling writers write profiling run times for all registered
    -- modules to the log file, and FIXME optionally a HDF5 file.
    local profiling_writers = halmd.io.profiling.writer()

    -- From the table of profiling writers, add each profiling writer
    -- to the sampler, to invoke write after the simulation is finished.
    for _, writer in pairs(profiling_writers) do
        sampler:on_finish(writer.write)
    end
end
