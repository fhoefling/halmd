require("halmd.mdsim.particle")
require("halmd.modules")

-- grab modules
local mdsim = halmd.mdsim
-- grab C++ wrappers
local density_mode_wrapper = {
    [2] = libhalmd.observables.samples.density_mode_2_
  , [3] = libhalmd.observables.samples.density_mode_3_
}
-- grab standard library
local assert = assert

module("halmd.observables.samples.density_mode", halmd.modules.register)

--
-- construct density_mode module
--
function new()
    local particle = mdsim.particle() -- singleton
    local dimension = assert(particle.dimension)

    sample = assert(density_mode_wrapper[dimension](#particle.ntypes))
end
