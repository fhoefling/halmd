local module            = require("halmd.utility.module")

-- grab C++ wrappers
local density_mode_wrapper = {
    [2] = libhalmd.observables.samples.density_mode_2_
  , [3] = libhalmd.observables.samples.density_mode_3_
}
-- grab standard library
local assert = assert


--
-- construct samples::density_mode module
--
-- @param args parameter table
--   args.dimension   space dimension
--   args.nspecies    number of particle species
-- @returns instance of samples::density_mode module
--
local M = module(function()
    local dimension = assert(args.dimension)
    local nspecies = assert(args.nspecies)

    I will never be parsed :-) -- FIXME

    sample = assert(density_mode_wrapper[dimension])(nspecies)
    return sample
end)

return M
