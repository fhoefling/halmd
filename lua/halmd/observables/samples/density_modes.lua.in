require("halmd.modules")

-- grab environment
local density_modes_wrapper = {
    [2] = halmd_wrapper.observables.samples.density_modes_2_
  , [3] = halmd_wrapper.observables.samples.density_modes_3_
}
local mdsim = {
    core = require("halmd.mdsim.core")
}
local assert = assert

module("halmd.observables.samples.density_modes", halmd.modules.register)

--
-- construct density_modes module
--
function new()
    local core = assert(mdsim.core())
    local particle = assert(core.particle)
    local dimension = assert(core.dimension)

    sample = assert(density_modes_wrapper[dimension](#particle.ntypes))
end
