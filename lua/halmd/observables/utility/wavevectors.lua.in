require("halmd.modules")

-- grab environment
local wavevectors_wrapper = {
    [2] = halmd_wrapper.observables.utility.wavevectors_2_
  , [3] = halmd_wrapper.observables.utility.wavevectors_3_
}
local assert = assert

module("halmd.observables.utility.wavevectors", halmd.modules.register)

--
-- construct wavevectors module
--
-- @param wavenumbers:   list of wavenumbers
-- @param box_length:    edge lengths of simulation box, determines dimension
-- @param tolerance:     relative tolerance on wavevector magnitudes
-- @param maximum_count: maximum number of wavevectors per wavenumber
--
-- The module is configured by other modules and does not obtain its
-- parameters from command line options
function new(wavenumbers, box_length, tolerance, maximum_count)
    -- determine dimension from size of table box_length
    local dimension = #box_length

    local wavevectors = assert(wavevectors_wrapper[dimension])
    return wavevectors(wavenumbers, box_length, tolerance, maximum_count)
end

--
-- returns module description
--
function name()
    return "wavevectors"
end
