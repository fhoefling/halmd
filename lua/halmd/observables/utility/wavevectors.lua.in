require("halmd.modules")

-- grab environment
local wavevectors_wrapper = {
    [2] = halmd_wrapper.observables.utility.wavevectors_2_
  , [3] = halmd_wrapper.observables.utility.wavevectors_3_
}
local mdsim = {
    core = require("halmd.mdsim.core")
}
local assert = assert

module("halmd.observables.utility.wavevectors", halmd.modules.register)

--
-- return constructor of wavevectors module
--
function new()
    -- dependency injection
    local core = mdsim.core()
    local dimension = assert(core.dimension)

    return assert(wavevectors_wrapper[dimension])
end
