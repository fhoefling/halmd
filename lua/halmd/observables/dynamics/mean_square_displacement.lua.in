require("halmd.modules")

-- grab C++ wrappers
local msd_wrapper = libhalmd.observables.dynamics.mean_square_displacement
-- grab standard library
local assert = assert

module("halmd.observables.dynamics.correlations.mean_square_displacement", halmd.modules.register)

--
-- construct instance of mean-square displacement (MSD) functor
-- @param args parameter table
--   args.sample        instance of phase space sample
-- @returns instance of MSD functor
--
function new(args)
    local sample = assert(args.sample)

    -- construct msd module
    local msd = assert(msd_wrapper)(sample)
    return msd
end

--
-- @returns module description
--
function description()
    return "mean-square displacement"
end
