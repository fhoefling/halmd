local module            = require("halmd.utility.module")

-- grab C++ wrappers
local vacf_wrapper = libhalmd.observables.dynamics.velocity_autocorrelation
-- grab standard library
local assert = assert


--
-- construct instance of velocity autocorrelation function (VACF) functor
-- @param args parameter table
--   args.sample        instance of phase space sample
-- @returns instance of VACF functor
--
local M = module(function(args)
    local sample = assert(args.sample)

    -- construct msd module
    local vacf = assert(vacf_wrapper)(sample)
    return vacf
end)

--
-- @returns module description
--
function M.description()
    return "velocity autocorrelation"
end

return M
